<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_margin="10dp"
    app:cardCornerRadius="20dp"
    app:cardElevation="20dp"
    android:layout_height="wrap_content">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_margin="10dp"
            android:padding="5dp"
            android:src="@mipmap/ic_launcher_round"
            android:id="@+id/imgListView"
            android:layout_width="100dp"
            android:layout_height="100dp" />



            <LinearLayout
                android:layout_margin="10dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:textSize="30sp"
                    android:textStyle="bold"
                    android:textColor="#58ba47"
                    android:text="Android"
                    android:id="@+id/tvListViewProdName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <TextView
                    android:text="500 PKR"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="#ffaa00"
                    android:id="@+id/tvListViewProdPrice"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">

                    <TextView
                        android:text="Rating : "
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="#878787"
                        android:id="@+id/tvListViewProdRatingHead"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />


                    <TextView
                    android:layout_marginLeft="5dp"
                    android:text="5"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="#878787"
                    android:id="@+id/tvListViewProdRating"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                    <ImageView
                        android:src="@drawable/my_star_for_rating"
                        android:layout_marginLeft="10dp"
                        android:layout_width="25dp"
                        android:layout_height="25dp" />
                </LinearLayout>

            </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>
