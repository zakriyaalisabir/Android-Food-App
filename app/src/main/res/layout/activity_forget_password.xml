<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:padding="20dp"
    android:layout_height="match_parent"
    tools:context="com.zakriyaalisabir.f00dstore.ForgetPassword">


    <TextView
        android:layout_above="@+id/tiL1ForgetPassword"
        android:layout_width="match_parent"
        android:layout_marginBottom="10dp"
        android:textStyle="bold"
        android:textSize="15sp"
        android:textColor="@color/colorPrimary"
        android:text="Note:\n\t\t\tEnter a valid email because we will send you a confirmation message to the entered email ,if you donot have a valid email then you cannot proceed further."
        android:layout_height="wrap_content" />


    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tiL1ForgetPassword"
        android:layout_centerInParent="true"
        >
        <EditText
            android:inputType="textEmailAddress"
            android:id="@+id/etEmailForgetPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Email"
            android:textSize="15sp"
            android:singleLine="true"
            />

    </android.support.design.widget.TextInputLayout>


    <Button
        android:textSize="20sp"
        android:id="@+id/btnForgetPassword"
        android:text="Submit"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/tiL1ForgetPassword"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/round_button"/>


</RelativeLayout>
